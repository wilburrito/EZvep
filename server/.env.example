# Stripe API credentials (Get these from your Stripe Dashboard)
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Feature flags
USE_FALLBACK_MODE=false # Set to true during development to use mock payment flow instead of real Stripe API

# Production URL (used for success/cancel redirects in production)
PRODUCTION_URL=https://ezvep.com

# Email configuration
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here
EMAIL_SERVICE=gmail

# Google Places API key
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# Google Sheets integration
GOOGLE_SHEETS_FAQ_SPREADSHEET_ID=your_spreadsheet_id_here
GOOGLE_SHEETS_FAQ_SHEET_NAME=VEP FAQ Downloads

# Server configuration
PORT=3001
NODE_ENV=development
