{
  "version": 2,
  "builds": [
    { 
      "src": "package.json", 
      "use": "@vercel/node" 
    },
    { 
      "src": "api/**/*.js", 
      "use": "@vercel/node" 
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
